@model IEnumerable<Subscriber_File>;
@{
    ViewBag.Title = "كشف المشتركين ";
}
<div class="grid-margin">
    <a type="button" class="btn btn-success btn-icon-text" asp-controller="Subscriber" asp-action="Create">
        إضافه مشترك
    </a>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th>م</th>
            <th> رقم الهويه</th>
            <th>الاسم</th>
            <th>المدينه</th>
            <th>الحى</th>
            <th>الجوال</th>
            <th>عدد الاشتراكات</th>
            <th> تعديل</th>
        </tr>
    </thead>

    <tbody>

        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td> @i </td>
                <td> @item.Subscriber_File_Id</td>
                <td>@item.Subscriber_File_Name</td>
                <td>@item.Subscriber_File_City</td>
                <td>@item.Subscriber_File_Area</td>
                <td>@item.Subscriber_File_Mobile</td>
                <td>@item.Subscription.Count()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Subscriber_File_Id" class="text-decoration-none"> <i class=" icon-pencil text-primary"></i></a>
                </td>
            </tr>

            i++;
        }


    </tbody>
</table>


<style>
    main {
        margin-top: 0 !important;
    }


    .container {
        width: 12000px !important;
        margin-right: 237px
    }

    th, td {
        text-align: center !important;
    }

</style>

