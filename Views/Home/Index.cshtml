@{
    ViewBag.Title = "الرئسيه";
}

<div class="row quick-action-toolbar">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-header d-block d-md-flex">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="d-md-flex row m-0 quick-action-btns" role="group" aria-label="Quick action buttons">
                <div class="col-sm-6 col-md-3 p-3 text-center btn-wrapper">
                    <a type="button" class="btn px-0" asp-controller="Subscriber" asp-action="Create">  اضف مشترك  <i class="icon-user mr-2"></i></a>
                </div>
                <div class="col-sm-6 col-md-3 p-3 text-center btn-wrapper">
                    <a type="button" class="btn px-0" asp-controller="Subscribtion" asp-action="Create"> اضف اشتراك  <i class="icon-docs mr-2"></i></a>
                </div>
                <div class="col-sm-6 col-md-3 p-3 text-center btn-wrapper">
                    <a type="button" class="btn px-0" asp-controller="RrealEstate" asp-action="Create"> اضف عفار  <i class="icon-folder mr-2"></i></a>
                </div>
                <div class="col-sm-6 col-md-3 p-3 text-center btn-wrapper">
                    <a type="button" class="btn px-0" asp-controller="Invoices" asp-action="Create"> اضف فاتوره <i class="icon-book-open mr-2"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>